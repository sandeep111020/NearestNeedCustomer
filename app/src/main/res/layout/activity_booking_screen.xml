<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".BookingScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/idRVItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_count"
            android:textStyle="bold"
            android:text="Count"
            android:textSize="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_amount"
            android:textStyle="bold"
            android:text="Amount"
            android:textSize="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edt_name"
            android:hint="Name"
            android:textSize="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edt_phone_number"
            android:hint="Phone Number"
            android:textSize="25dp"
            android:inputType="number"

            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edt_address1"
            android:hint="Door-Number, Street Name"
            android:textSize="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edt_area"
            android:hint="Area"
            android:textSize="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edt_address2"
            android:hint="CITY"
            android:textSize="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edt_address3"
            android:hint="State"
            android:textSize="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edt_pin"
            android:hint="Enter PIN"
            android:textSize="25dp"
            android:inputType="number"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PAY"
            android:id="@+id/btn_pay"
            android:layout_gravity="center"
            android:textSize="25dp"
            android:layout_marginTop="25dp"/>

    </LinearLayout>

</ScrollView>